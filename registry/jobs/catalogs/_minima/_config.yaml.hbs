title: {{websiteTitle}}
locale: {{websiteLocale}}
tagline: {{websiteTagline}}
url: {{websiteUrl}}
baseurl: {{websiteBase}}
# google_analytics: G-XXXXXXXXXXXX
description: |
  {{websiteDesc}}

author:
  name: {{websiteAuthorName}}
  twitter: {{websiteAuthorTwitter}}

{{#if websiteTwitter}}
twitter:
  card: summary
  username: {{websiteTwitter}}
{{else}}
# twitter:
#   card: summary
#   username: username
{{/if}}

plugins:
  {{#each plugins}}
  - {{this}}
  {{/each}}

remote_theme: jekyll/minima
minima:
  skin: auto
  {{#if websiteTwitter}}
  social_links:
    - platform: twitter
      user_url: https://twitter.com/{{websiteTwitter}}
    # - platform: github
    #   user_url: https://github.com/OWNER
  {{else}}
  # social_links:
  #   - platform: twitter
  #     user_url: https://twitter.com/USERNAME
  #   - platform: github
  #     user_url: https://github.com/OWNER
  {{/if}}

show_excerpts: false

